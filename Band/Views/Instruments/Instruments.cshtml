@{
    ViewBag.Title = "Instruments";
}

<h2>Instruments</h2>

@model IEnumerable<Band.Models.Instrument>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InstrumentID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InstrumentID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.InstrumentID }) |
            @Html.ActionLink("Details", "Details", new { id = item.InstrumentID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.InstrumentID })
        </td>
    </tr>
    }

</table>
